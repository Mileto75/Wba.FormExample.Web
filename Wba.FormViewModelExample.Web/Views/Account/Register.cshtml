@model AccountRegisterViewModel

<div class="row">
    <div class="col col-lg-4 mx-auto border border-1 rounded rounded-2">
        <h6>Register</h6>
        <form asp-controller="Account" asp-action="Register" method="post">
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="RepeatPassword"></label>
                <input asp-for="RepeatPassword" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="SelectedCountryId" class="form-check-label"></label>
                <select class="form-select mb-2" asp-for="SelectedCountryId" asp-items="@Model.Countries"></select>
            </div>
            <button type="submit" class="btn btn-primary mb-2">Submit</button>
        </form>
    </div>
</div>
